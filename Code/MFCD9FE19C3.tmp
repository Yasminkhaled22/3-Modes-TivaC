int addition (int num1, int num2)
{
	result = num1 + num2;
	return result;
}

int subtraction (int num1, int num2)
{ 
	result = num1 - num2;
	return result;
}

int multiplication (int num1, int num2)
{
	result = num1 * num2;
	return result;
}

float divide (int num1, int num2)
{
	//  result = 'xx';
	if(num2 == 0)
	{
		LCD_Print("error");
		//   LCD_errormsg();
	}

	else if(num1 == 0)
	{
		result =0;
	}

	else
	{
		result = (num1 / num2);
	}
	return result;
}

