}

int storing(uint8 arr[],uint32 x)
{ 
	int no =0;
	for (int y=0; y<x;y++)
	{
		//  no += (arr[y] * 10^ (x-y));
		no += (arr[y] * arr2[x-y-1]);
	} 
	return no;
}
void Timer_mode(void)
{
	seconds--;
        if(minutes==0 && seconds==-1)
	{
           GPIO_PORTF_DATA_R|=(1<<2); 
            delay_ms(150);
            Timer0A_Deinit();
            //Buzzer_off();
            seconds=0;
            minutes=0;
	}
	if(seconds==-1)
	{
		seconds=59;
		minutes--;
	}
	
}

void stop_watch(void)
{
	seconds_ ++;
}

